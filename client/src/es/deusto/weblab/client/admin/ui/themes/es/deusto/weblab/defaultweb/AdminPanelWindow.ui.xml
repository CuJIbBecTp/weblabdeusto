			<w:WlWaitingLabel ui:field="waitingLabel" styleName="web-admin-waiting-label"></w:WlWaitingLabel>
			<g:Label ui:field="generalErrorLabel" styleName="web-admin-error-message"></g:Label>
	
		</g:VerticalPanel>
		
	</g:VerticalPanel>

</ui:UiBinder>