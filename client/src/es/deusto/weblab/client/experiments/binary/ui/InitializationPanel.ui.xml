			<g:RadioButton ui:field="optionBCD"   name="game" checked="true">BCD</g:RadioButton>
			<g:RadioButton ui:field="optionOther" name="game">Other</g:RadioButton>
		</g:VerticalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 