	<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	    xmlns:g='urn:import:com.google.gwt.user.client.ui'
	    xmlns:w="urn:import:es.deusto.weblab.client.ui.widgets">
	    
	    
	    <w:WlVerticalPanel ui:field="widget" width='100%' horizontalAlignment='ALIGN_CENTER'>
	        
			<w:WlVerticalPanel borderWidth="0" ui:field="removableWidgetsPanel" width='100%' horizontalAlignment='ALIGN_CENTER'>
			
				<g:Label text="Select the program to send:" horizontalAlignment='ALIGN_CENTER'></g:Label>

				<g:HorizontalPanel borderWidth="0">
				<w:WlWebcam ui:field="webcam" visible="false"></w:WlWebcam>
				</g:HorizontalPanel>

				<w:WlTimer ui:field="timer" width="30%" styleName="wl-time_remaining"></w:WlTimer>

				<!-- Needs to be initially hidden so as not to take space on the reserve screen. -->
				<w:WlHorizontalPanel borderWidth="0" ui:field="inputWidgetsPanel" visible="false" horizontalAlignment='ALIGN_CENTER'>
					
					<w:WlVerticalPanel ui:field="firstCol" horizontalAlignment='ALIGN_CENTER' width='100%'>
						
						<w:WlHorizontalPanel ui:field="switchesPanel" width="100%" spacing="20">
							<w:WlSwitch title="3"/>
							<w:WlSwitch title="2"/>
							<w:WlSwitch title="1"/>
							<w:WlSwitch title="0"/>
						</w:WlHorizontalPanel>
						
						<w:WlHorizontalPanel ui:field="potentiometersPanel" spacing="20">
							<w:WlPotentiometer title="5"/>
							<w:WlPotentiometer title="4"/>
							<w:WlPotentiometer title="3"/>
							<w:WlPotentiometer title="2"/>
						</w:WlHorizontalPanel>
			
					</w:WlVerticalPanel>
					
					<w:WlVerticalPanel ui:field="secondCol" horizontalAlignment="ALIGN_CENTER" width="100%">
						
						<w:WlHorizontalPanel ui:field="pulsesPanel" spacing="20">
							<g:Hidden></g:Hidden>
						</w:WlHorizontalPanel>
						
						<w:WlHorizontalPanel ui:field="writeAndTriggerSwitchPanel" spacing="20" width="100%">
							
							<w:WlVerticalPanel ui:field="writePanel" width="100%" horizontalAlignment='ALIGN_CENTER'>
								<g:Hidden></g:Hidden>
							</w:WlVerticalPanel>
							
							<w:WlVerticalPanel ui:field="triggerSwitchPanel" horizontalAlignment='ALIGN_CENTER'>
								<w:WlSwitch ui:field="triggerSwitch" title="Trigger"></w:WlSwitch>
							</w:WlVerticalPanel>
						
						</w:WlHorizontalPanel>
						
					</w:WlVerticalPanel>
					
				
				</w:WlHorizontalPanel>

				<w:WlWaitingLabel ui:field="messages" horizontalAlignment="ALIGN_CENTER">
				</w:WlWaitingLabel>

			</w:WlVerticalPanel>
		
		</w:WlVerticalPanel>
		

	</ui:UiBinder>