	<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	    xmlns:g='urn:import:com.google.gwt.user.client.ui'
	    xmlns:w="urn:import:es.deusto.weblab.client.ui.widgets">
	    
	    
	    <g:VerticalPanel ui:field="widget" width='100%' horizontalAlignment='ALIGN_CENTER'>
	        
			<g:VerticalPanel borderWidth="0" ui:field="mainWidgetsPanel" width='100%' horizontalAlignment='ALIGN_CENTER'>
			
				<g:Label ui:field="selectProgramLabel" text="Select the program to send:" horizontalAlignment='ALIGN_CENTER'></g:Label>

				<g:HorizontalPanel borderWidth="0" horizontalAlignment="ALIGN_CENTER" width="100%">
					<w:WlWebcam ui:field="webcam" visible="false"></w:WlWebcam>
				</g:HorizontalPanel>

				<g:HorizontalPanel borderWidth="0" horizontalAlignment="ALIGN_CENTER" width="100%">
					<w:WlTimer ui:field="timer" width="100%" styleName="wl-time_remaining"></w:WlTimer>
				</g:HorizontalPanel>

				<!-- Needs to be initially hidden so as not to take space on the reserve screen. -->
				<g:HorizontalPanel borderWidth="0" ui:field="inputWidgetsPanel" visible="false" horizontalAlignment='ALIGN_CENTER'>
					
					<g:VerticalPanel ui:field="firstCol" horizontalAlignment='ALIGN_CENTER' width='100%'>
						
						<g:HorizontalPanel ui:field="switchesPanel" width="100%" spacing="20">
							<w:WlSwitch title="3"/>
							<w:WlSwitch title="2"/>
							<w:WlSwitch title="1"/>
							<w:WlSwitch title="0"/>
						</g:HorizontalPanel>
						
						<g:HorizontalPanel ui:field="potentiometersPanel" spacing="20">
							<w:WlPotentiometer title="5"/>
							<w:WlPotentiometer title="4"/>
							<w:WlPotentiometer title="3"/>
							<w:WlPotentiometer title="2"/>
						</g:HorizontalPanel>
			
					</g:VerticalPanel>
					
					<g:VerticalPanel ui:field="secondCol" horizontalAlignment="ALIGN_CENTER" width="100%">
						
						<g:HorizontalPanel ui:field="pulsesPanel" spacing="20">
							<w:WlTimedButton title="7"/>
							<w:WlTimedButton title="6"/>
							<w:WlTimedButton title="5"/>
							<w:WlTimedButton title="4"/>
						</g:HorizontalPanel>
						
						<g:HorizontalPanel ui:field="writeAndTriggerSwitchPanel" spacing="20" width="100%">
							
							<g:VerticalPanel ui:field="writePanel" width="100%" horizontalAlignment='ALIGN_CENTER'>
								<w:WlTextBoxWithButton ui:field="serialPortText" title="UART"/>
							</g:VerticalPanel>
							
							<g:VerticalPanel ui:field="triggerSwitchPanel" horizontalAlignment='ALIGN_CENTER'>
								<w:WlSwitch ui:field="triggerSwitch" title="Trigger"></w:WlSwitch>
							</g:VerticalPanel>
						
						</g:HorizontalPanel>
						
					</g:VerticalPanel>
					
				
				</g:HorizontalPanel>

				<w:WlWaitingLabel ui:field="messages" horizontalAlignment="ALIGN_CENTER">
				</w:WlWaitingLabel>

			</g:VerticalPanel>
		
		</g:VerticalPanel>
		

	</ui:UiBinder>