<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'
    xmlns:my='urn:import:es.deusto.weblab.client.lab.ui.themes.es.deusto.weblab.defaultweb.widgets'
    xmlns:w="urn:import:es.deusto.weblab.client.lab.ui.widgets">
    
    <ui:with field='res' type='es.deusto.weblab.client.lab.ui.themes.es.deusto.weblab.defaultweb.Resources'/>

    <ui:style>
    	.bold-text { font-weight: bold;  }
    </ui:style>
        
    <g:VerticalPanel ui:field="containerPanel" styleName="web-login-container">
    
    	<g:VerticalPanel styleName="web-login-box">
    
	    	<g:HorizontalPanel styleName="web-login-logo">
		   		<g:Image resource='{res.logo}' />
			</g:HorizontalPanel>
			
	   		<g:HorizontalPanel ui:field="langsPanel" spacing="15" styleName="web-login-languages" />		    	
	    	
	    	<g:VerticalPanel styleName="web-login-form">
	    	
		    	<my:EasyGrid ui:field="grid" cols='2' rows='2' styleName="web-login-form-fields">
		    	
					<g:Label ui:field="usernameLabel"></g:Label>
					<g:TextBox ui:field="usernameTextbox"></g:TextBox>
					
					<g:Label ui:field="passwordLabel"></g:Label>
					<g:PasswordTextBox ui:field="passwordTextbox"></g:PasswordTextBox>
		    	
		    	</my:EasyGrid>			    	
			    	
			    <g:HorizontalPanel styleName="web-login-form-button">
					<g:Button ui:field="loginButton">Log in</g:Button>
				</g:HorizontalPanel>
	
			</g:VerticalPanel>
			
			<w:WlWaitingLabel ui:field="waitingLabel" styleName="web-waiting-label"></w:WlWaitingLabel>
			<g:Label ui:field="generalErrorLabel" styleName="web-error-message"></g:Label>
		
		</g:VerticalPanel>
	
		<g:HorizontalPanel styleName="web-login-foot-message">
			<g:HTML ui:field="demoAvailableHTML"></g:HTML>	
		</g:HorizontalPanel>
		
		<g:HorizontalPanel styleName="web-login-foot-message">
			<g:HTML ui:field="supportHTML"></g:HTML>
		</g:HorizontalPanel>
				
   		<g:Cell horizontalAlignment="ALIGN_CENTER">
			<g:HorizontalPanel width="100%" horizontalAlignment="ALIGN_CENTER" spacing="10">
				<g:Cell width="50%" horizontalAlignment="ALIGN_RIGHT">
					<g:Label text="classic" styleName="{style.bold-text}"></g:Label>
				</g:Cell>
				<g:Cell horizontalAlignment="ALIGN_LEFT">
					<g:Anchor text="mobile (beta)" href=".?mobile=true"></g:Anchor>
				</g:Cell>
			</g:HorizontalPanel>
		</g:Cell>
				
	</g:VerticalPanel>
	
</ui:UiBinder>