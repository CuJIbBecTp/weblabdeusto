<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'
    xmlns:my='urn:import:es.deusto.weblab.client.ui.themes.es.deusto.weblab.defaultmobile.widgets'
    xmlns:w="urn:import:es.deusto.weblab.client.ui.widgets">
    
    <ui:with field="res" type="es.deusto.weblab.client.ui.themes.es.deusto.weblab.defaultmobile.i18n.IWebLabDeustoThemeMessages"/>
    
    <g:VerticalPanel width='100%' horizontalAlignment='ALIGN_CENTER'>
        
		<g:VerticalPanel width='100%' horizontalAlignment='ALIGN_CENTER'>
			<g:Anchor text="&lt; {res.backToMyExperiments}" ui:field="back" horizontalAlignment="ALIGN_LEFT"></g:Anchor>
			<g:Label text="{res.reserveThisExperiment}" styleName="title-label" />
			<my:EasyGrid ui:field="grid" cols='2' rows='3' cellSpacing='1'>
				<g:Label text="{res.experimentName}:"/>
				<g:Label ui:field="experimentName" styleName="experiment-detail"/>
				
				<g:Label text="{res.experimentCategory}:"/>
				<g:Label ui:field="experimentCategory" styleName="experiment-detail"/>
				
				<g:Label text="{res.timeAllowed}:"/>
				<g:Label ui:field="timeAllowed" styleName="experiment-detail"/>
			</my:EasyGrid>
		</g:VerticalPanel>
		
		<g:VerticalPanel ui:field='experimentArea' width='100%' horizontalAlignment='ALIGN_CENTER'>
		</g:VerticalPanel>
		
		<g:VerticalPanel width='100%' horizontalAlignment='ALIGN_CENTER'>
			<w:WlWaitingLabel ui:field="waitingLabel"/>
			<g:Button ui:field="reserveButton" text="{res.reserve}"/>
		</g:VerticalPanel>
		
		<g:VerticalPanel width='100%' horizontalAlignment='ALIGN_CENTER'>
			<g:Button ui:field="finishButton" text="{res.reserve}"/>
		</g:VerticalPanel>
		
		<g:Label ui:field='generalErrorLabel' styleName='wl-error_message'>
		</g:Label>
		
	
	</g:VerticalPanel>
	

</ui:UiBinder>